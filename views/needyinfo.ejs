<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title><%= data.name %> </title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="ejs.min.js"></script>

      <%- include('./navbar_style') %>
      <%- include('./header') %>
  </head>
  <body>
    <h1><%= data.name %></h1>
    <br>
    phone no: <%= data.phoneno %><br>
    <%= data.HelpType %> <br>
    <b>Amount collected: <%= data.amount %></b>
    <% if(data.HelpType == "Donation") { %>
        <h3>GOAL:<%= data.goal %></h3>
        <% if(user !== null && user.isUser == true && data.amount < data.goal) { %>
          <form action="/donate?phn=<%= data.phoneno %>&usr=<%= user.username %>" method="post">
            <input type="number" name="donation" placeholder="Enter amount to donate">
            <button type="submit" name="submit">PAY!</button>
          </form>
        <% } %>
        <% if(data.amount >= data.goal) { %>
            <h2>GOAL ALREADY REACHED!!</h2>
        <% } %>

    <% } %>
    <% if(data.HelpType == "Sponsorship") { %>
        <h3>Goal:<%= data.goal %></h3>
        <h4>Sponsorship per month:<%= data.goal/10 %></h4>
        <% if(user !== null && user.isUser == true && data.amount < data.goal) { %>
          <form action="/sponsor?phn=<%= data.phoneno %>&usr=<%= user.username %>" method="post">
            <button type="submit" name="submit">SPONSOR</button>
          </form>
        <% } %>
        <% if(data.amount >= data.goal) { %>
            <h2>GOAL ALREADY REACHED!!</h2>
        <% } %>
    <% } %>

    
  </body>
</html>
